<%= turbo_stream.append "like" do %>
  <% like = @post.find_like(current_user)%>
  <% if @post.liked_by?(current_user) %>
    <%= button_to "Delete Like", post_like_path(like, @post, like: { user_id: current_user.id, post_id: @post.id }),
          method: :delete %>  
  <% else %>
    <%= button_to 'Like', post_likes_path(@post, like: { user_id: current_user.id, post_id: @post.id })%>
  <% end %>
<% end %>