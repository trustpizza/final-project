<div class="row justify-content-center m-4 p-4">
  <div class="col-6">
    <%= form_with(model: @post, url: user_posts_path(current_user)) do |f|%>
      <% if @post.errors.any? %>
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being created </h2>
          <ul>
            <% @post.errors.each do |error| %>
              <li> <%= error.full_message %>  </li>
            <% end %>
          </ul>
      <% end %>
      <div class="mb-3">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: "form-control mb-3" %> <br>
        <%= f.label :body, class: 'form-label' %>
        <%= f.text_area :body, class: "form-control mb-3" %> <br>
        
        <%= f.submit "Post", class: "btn btn-primary mt-4" %>
      </div>
    <% end %>
  </div>
</div>